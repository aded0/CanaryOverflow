@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CanaryOverflow.Service.Mvc.Features.Auth.ForgotPasswordViewModel
@{
  ViewData["Title"] = "Forgot your password?";
}

<h1>@ViewData["Title"]</h1>

<h2>Enter your email.</h2>
<hr/>
<div class="row">
  <div class="col-md-4">
    <form method="post" asp-controller="Authn" asp-action="ForgotPassword">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-floating">
        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true"/>
        <label asp-for="Email" class="form-label"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
      </div>
      <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
    </form>
  </div>
</div>
