@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CanaryOverflow.Service.Mvc.Features.Auth.SignupViewModel
@{
  Layout = "_LayoutSlim";
  ViewData["Title"] = "Signup";
}

<form asp-action="Signup" asp-controller="Auth" asp-route-returnurl="@ViewData["ReturnUrl"]" class="form" method="post">
  <div asp-validation-summary="ModelOnly"></div>
  <section class="form__section">
    <label asp-for="Email" class="label"></label>
    <input aria-required="true" asp-for="Email" autocomplete="email" class="input form__input" type="text"/>
    <span asp-validation-for="Email" class="error"></span>
  </section>
  <section class="form__section">
    <label asp-for="Password" class="label"></label>
    <input aria-required="true" asp-for="Password" autocomplete="new-password" class="input form__input" type="password"/>
    <span asp-validation-for="Password" class="error"></span>
  </section>
  <section class="form__section">
    <label asp-for="ConfirmPassword" class="label"></label>
    <input aria-required="true" asp-for="ConfirmPassword" autocomplete="new-password" class="input form__input" type="password"/>
    <span asp-validation-for="ConfirmPassword" class="error"></span>
  </section>
  <button class="button button_primary form__commit" type="submit">Sign up</button>
</form>
<div class="form__links">
  <span>Already have an account? <a class="form__link" asp-controller="Auth" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Log in</a></span>
</div>
